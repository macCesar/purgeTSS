{
  "files.exclude": {
    "build/": true,
    "i18n/": true,
    "platform/": true,
    "Resources/": true,
    "node_modules/": true,
    "package-lock.json": true
  },
  "search.exclude": {
    "build/": true,
    "i18n/": true,
    "platform/": true,
    "Resources/": true,
    "node_modules/": true,
    "package-lock.json": true
  },
  "files.watcherExclude": {
    "build/": true,
    "i18n/": true,
    "platform/": true,
    "Resources/": true,
    "node_modules/": true,
    "package-lock.json": true
  },
  //
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  //
  "eslint.format.enable": true,
  //
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "html-css-class-completion.HTMLLanguages": [
    "xml"
  ],
  "html-css-class-completion.excludeGlobPattern": "public/**/*.{css,html},**/node_modules/**,purgetss/fonts/**/*.{css,html}",
  "tailwindCSS.includeLanguages": {
    "xml": "html"
  },
  "tailwindCSS.classAttributes": [
    "icon",
    "class",
    "classes",
    "ngClass",
    "className",
    "activeIcon"
  ],
  "tailwindCSS.experimental.configFile": {
    "purgetss/config.js": [
      "app/views/**"
    ]
  },
  //
  "tailwind-raw-reorder.classRegex": {
    "xml": [
      [
        "[class|icon|activeIcon]=(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
        "[\"'`]([^]+)"
      ]
    ],
    "javascript": [
      [
        "[class|apply]: (([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
        "[\"'`]([^]+)"
      ]
    ]
  }
}
